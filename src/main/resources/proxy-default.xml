<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
	
	<property>
		<name>commons.proxy.factory.class</name>
		<value>org.shirdrn.tinyframework.commons.proxy.factory.DefaultProxyFactory</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.factory.mode.code</name>
		<value>0</value>
		<description>
			0 - invoke a provided method, and proxy is checked before 
				returning a available one.
			1 - besides invoking a provided method, the proxy module can 
				also check itself based on a background thread and doesn't
				depend on the callers.
		</description>
	</property>
	<property>
		<name>commons.proxy.check.interval</name>
		<value>21600000</value>
		<description>For mode SERVER. Million seconds, default 21600000ms(6h)</description>
	</property>
	<property>
		<name>commons.proxy.file.dir</name>
		<value>proxies</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.file.suffix</name>
		<value>.prx</value>
		<description></description>
	</property>
	
	<!-- Locality proxy configurations -->
	<property>
		<name>commons.proxy.factory.locality.continents.dir</name>
		<value>continents</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.factory.locality.geoip.file</name>
		<value>geoip/GeoIP-106_20121106.dat</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.checker.class</name>
		<value>org.shirdrn.tinyframework.commons.proxy.checker.TelnetProxyChecker</value>
		<description></description>
	</property>
	
	
	
	<!-- Proxy checker components -->
	<property>
		<name>commons.proxy.telnet.checker.class</name>
		<value>org.shirdrn.tinyframework.commons.proxy.checker.TelnetProxyChecker</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.telnet.checker.connect.timeout</name>
		<value>1000</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.telnet.checker.socket.timeout</name>
		<value>1000</value>
		<description></description>
	</property>
	
	<property>
		<name>commons.proxy.http.checker.class</name>
		<value>com.comodo.wm.commons.proxy.http.checker.HttpConversationProxyChecker</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.http.checker.connect.timeout</name>
		<value>3000</value>
		<description></description>
	</property>
	<property>
		<name>commons.proxy.http.factory.checker.sample.links</name>
		<value>
			http://www.dmoz.org/,
			http://www.apache.org/
		</value>
		<description></description>
	</property>

</configuration>